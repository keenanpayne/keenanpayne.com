{# Imports #}
{% import "atoms/label.njk" as label with context %}

{# Component Settings #}
{% set ids = section.ids %}
{% set readMore = section.readMore %}

{% if ids %}
  <section class="testimonials _container _page-spacing-top">
    {{ label.output('Previous collaborators say', 'testimonials-label', readMore) }}

    <div class="testimonials-container">
      {% for id in ids %}
        {% for testimonial in collections.testimonials %}
          {% if testimonial.id == id %}
            <div class="testimonials-slide">
              {% include "components/testimonial.njk" %}
            </div>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </section>
{% endif %}