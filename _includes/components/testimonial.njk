{# Component Settings #}
{% set project = section.project %}
{% set person = section.person %}
{% set quote = section.quote %}
{% set query = portfolio[project].people[person] %}

{# Markup #}
<blockquote class="testimonial">
  <p class="testimonial-text _type-my-voice _text-h3">
    <span>{{ query.quotes[quote] | safe }}</span>
  </p>

  <cite class="testimonial-cite">
    <span class="testimonial-author">{{ query.name }}{% if query.position %},</span> <span class="testimonial-position _text-h6">{{ query.position }}</span>{% endif %}
  </cite>
</blockquote>
