{% set pageUrl = metadata.url | replace('.com/', '.com') ~ page.url %}

{# Defaults #}
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="HandheldFriendly" content="True">
<meta name="MobileOptimized" content="320">
<meta name="author" content="Keenan Payne" />
<meta name="theme-color" content="#ffdc00">
<meta name="msapplication-TileColor" content="#ffdc00">
<meta name="description" content="{{ meta.description or metadata.description }}">
<link rel="canonical" href="{{ pageUrl }}">

{# Twitter Cards #}
<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@keenanpayne_" />
<meta name="twitter:creator" content="@keenanpayne_" />

{# OpenGraph #}
<meta property="og:url" content="{{ pageUrl }}" />
<meta property="og:title" content="{{ metadata.title }}" />
<meta property="og:description" content="{{ meta.description or metadata.description }}" />

{% if meta.image or metadata.image %}
  <meta property="og:image" content="{{ meta.image or metadata.image }}" />
{% endif %}
