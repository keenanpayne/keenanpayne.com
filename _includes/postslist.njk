<section class="postlist -stack _container">
  <div class="postlist-toggle">
    {{ label }}
  </div>

  <div class="postlist-items">
    {%- for post in postslist | reverse -%}
      <article class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
        <div class="postlist-meta">
          {%- if post.data.type -%}
            <span class="_label">
              {{ post.data.type }}
            </span>
          {%- endif -%}

          <time class="_text-smaller" datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate }}
          </time>
        </div>

        <header class="postlist-header">
          <h3 class="postlist-title _text-h3">
            <a href="{{ post.url | url }}" class="postlist-link">
              {% if post.data.title %}
                {{ post.data.title }}
              {% else %}
                <code>{{ post.url }}</code>
              {% endif %}
            </a>
          </h3>

          <p class="postlist-lede">
            This is a lede for the article that will be displayed in multiple contexts â€” meta description, tiles, and article header.
          </p>
        </header>

        {% if postsListTags !== false %}
          <ul class="postlist-tags">
            {%- for tag in post.data.tags | filterTagList -%}
              <li class="postlist-tag">
                {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}

                <a href="{{ tagUrl | url }}" class="tags">
                  {{ tag }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        {% endif %}
      </article>
    {%- endfor -%}
  </div>
</section>