<!doctype html>
<html lang="en">
  <head>
    <title>
      {% if title %}
        {{ title ~ ' | Keenan Payne' }}
      {% else %}
        {{ metadata.title }}
      {% endif %}
    </title>
    
    <link rel="stylesheet" href="{{ '/css/app.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ meta.description or metadata.description }}">

    {# Twitter Cards #}
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@keenanpayne_" />
    <meta name="twitter:creator" content="@keenanpayne_" />
    <meta property="og:url" content="{{ metadata.url | replace('.com/', '.com') ~ page.url }}" />
    <meta property="og:title" content="{{ metadata.title }}" />
    <meta property="og:description" content="{{ meta.description or metadata.description }}" />

    {% if meta.image or metadata.image %}
      <meta property="og:image" content="{{ meta.image or metadata.image }}" />
    {% endif %}
  </head>
  <body>
    <header class="header">
      <div class="header-left">
        <h1 class="header-logo _text-h4">
          <a href="{{ '/' | url }}">
            {{ metadata.title }}
          </a>
        </h1>
      </div>

      <div class="header-right">
        {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <ul class="nav">
          {%- for entry in collections.all | eleventyNavigation -%}
            <li class="nav-item{% if entry.url == page.url %} -active{% endif %} {{ '-cta' if entry.cta }}">
              <a href="{{ entry.url | url }}">
                {{ entry.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    </header>

    <main class="{% if templateClass %}{{ templateClass }}{% endif %}">
      {{ content | safe }}
    </main>

    <footer class="footer">
      <div class="footer-content">
        <div class="footer-left">
          <p class="footer-twitter">
            <span>Follow me</span>
            <a class="_text-h4" href="https://Twitter.com/KeenanPayne_">
              @KeenanPayne_
            </a>
          </p>
        </div>

        <div class="footer-right">
          <p class="_label">
            <a href="https://creativecommons.org/share-your-work/public-domain/cc0/" target="_blank" rel="noopener">
              CC0 ‚Äî¬†No Rights Reserved
            </a>
            <br>
            Do as you wish ‚úåüèª
          </p>
        </div>
      </div>
    </footer>

    {% include "components/hello.html" %}
  </body>
</html>
