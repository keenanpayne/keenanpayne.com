---
layout: layouts/base.njk
permalink: "/{{ title | slug }}/"
---
{# TODO: Create macros for repeated elements here and in `postslist.njk` #}

<section class="post _container">
  <header class="post-header">
    <div class="post-meta">
      {%- if type -%}
        <a class="postlist-type _label" href="/type/{{ type | lower | plural }}" title="View archive for {{ type | lower | plural }}">
          {{ type }}
        </a>
      {%- endif -%}

      {%- if type != 'Resource' -%}
        <time class="_text-small" datetime="{{ page.date | htmlDateString }}">
          {{ page.date | readableDate }}
        </time>
      {%- endif -%}
    </div>

    <h1 class="post-title">
      {{ title }}
    </h1>

    {%- if tags -%}
      <div class="post-tags">
        {%- for tag in tags | filterTagList -%}
          <div class="post-tag">
            {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}

            {% if tag == "drafts" %}
              <span class="tag -inactive">
                {{ tag | replace('drafts', 'draft') }}
              </span>
            {% else %}
              <a href="{{ tagUrl | url }}" class="tag">
                {{ tag }}
              </a>
            {% endif %}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </header>

  <div class="post-content">
    {%- if type == 'Draft' -%}
      {# TODO: Fix this so that notices for drafts are automatically displayed #}
      {# {% include "type/notice.html" with content: "<strong>Heads up:</strong> This article is still a work-in-progress." %} #}
    {%- endif -%}

    {{ content | safe }}
  </div>

  {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}

  {%- if nextPost or previousPost -%}
    <div class="postNav">
      <p class="postNav-next">
        {%- if nextPost -%}
          <span class="postNav-label _label">
            Next
          </span>
          
          <a href="{{ nextPost.url | url }}">
            {{ nextPost.data.title }}
          </a>
        {%- endif -%}
      </p>

      <p class="postNav-prev">
        {%- if previousPost -%}
          <span class="postNav-label _label">
            Previous
          </span>
          
          <a href="{{ previousPost.url | url }}">
            {{ previousPost.data.title }}
          </a>
        {%- endif -%}
      </p>
    </div>
  {%- endif -%}
</section>

{% include "components/comments.html" %}

{% include "newsletter.njk" %}