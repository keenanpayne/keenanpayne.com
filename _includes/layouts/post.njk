---
layout: layouts/base.njk
---

<section class="post">
  <header class="post-header">
    <div class="post-meta">
      {%- if type -%}
        <span class="_label">
          {{ type }}
        </span>
      {%- endif -%}

      <time class="_small-text" datetime="{{ page.date | htmlDateString }}">
        {{ page.date | readableDate }}
      </time>
    </div>

    <h1 class="post-title">
      {{ title }}
    </h1>

    {%- if tags -%}
      {%- for tag in tags | filterTagList -%}
        {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}

        <a href="{{ tagUrl | url }}" class="post-tag">
          {{ tag }}
        </a>
      {%- endfor %}
    {%- endif -%}
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}

  {%- if nextPost or previousPost -%}
    <hr>
    <ul>
      {%- if nextPost -%}
        <li>
          Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
        </li>
      {% endif -%}

      {%- if previousPost -%}
        <li>
          Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
        </li>
      {%- endif -%}
    </ul>
  {%- endif -%}
</section>