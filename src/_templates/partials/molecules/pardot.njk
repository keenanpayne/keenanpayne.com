{#  
 # @macro pardot.input
 #}
{% macro input(name, type, filter, size, required) %}
  {% set nameAttr = name | lower | replace(' ', '_') %}

  <div class="leadGen-field {{ size }}">
    <label class="leadGen-label _hidden" for="{{ nameAttr }}">
      {{ name }}
    </label>

    <input class="leadGen-input" type="{{ type }}" name="{{ nameAttr }}" id="{{ nameAttr }}" placeholder="{{ name }}" {{ required }} {{ 'data-input-filter=' ~ filter if filter }} />
  </div>
{% endmacro %}

{#  
 # @macro pardot.select
 #}
{% macro select(name, size, required, items) %}
  {% set nameAttr = name | lower | replace(' ', '_') %}

  <div class="leadGen-field {{ size }}">
    <label class="leadGen-label _hidden" for="{{ nameAttr }}">
      {{ name }}
    </label>

    <select class="leadGen-input" name="{{ nameAttr }}" id="{{ nameAttr }}" {{ 'required' if required }}>
      {% for item in items %}
        <option {% if loop.index == 1 %} value disabled selected {% else %} value="{{ item }}" {% endif %}>
          {{ item }}
        </option>
      {% endfor %}
    </select>
  </div>
{% endmacro %}

{#  
 # @macro pardot.textarea
 #}
{% macro textarea(name, size, required, placeholder=name) %}
  {% set nameAttr = name | lower | replace(' ', '_') %}

  <div class="leadGen-field {{ size }}">
    <label class="leadGen-label _hidden" for="{{ nameAttr }}">
      {{ placeholder }}
    </label>

    <textarea class="leadGen-input" name="{{ nameAttr }}" id="{{ nameAttr }}" placeholder="{{ placeholder }}" {{ required }}></textarea>
  </div>
{% endmacro %}

{#  
 # @macro pardot.checkbox
 #}
{% macro checkbox(name, size, required, text=name) %}
  {% set nameAttr = name | lower | replace(' ', '_') %}

  <div class="leadGen-field {{ size }} leadGen-checkbox">
    <label class="leadGen-label">
      <input class="leadGen-input" type="checkbox" name="{{ nameAttr }}" id="{{ nameAttr }}" value="true">
      {{ text }}
    </label>
  </div>
{% endmacro %}

{#  
 # @macro pardot.honeypot
 #}
{% macro honeypot() %}
  <div class="leadGen-honeypot">
    <label for="pardot_extra_field">Comments</label>
    <input type="text" id="pardot_extra_field" name="pardot_extra_field">
  </div>  
{% endmacro %}

{#  
 # @macro pardot.submit
 #}
{% macro submit() %}
  <div class="leadGen-submit">
    <input type="submit" class="button -primary -extra-wide -full-mobile" value="Send" />
  </div>
{% endmacro %}

